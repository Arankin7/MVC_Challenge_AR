<section>
    <a href="/dashboard">Back to Dashboard</a>
    <h2>
        Edit Post
    </h2>
    <form class="edit-post">
        <div>
            <input name="post-title" type="text" value="{{post.title}}" />
            <span>({{format_url post.post_url}})</span>
        </div>

        <div>
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit" class="pure-button button-success">Save Post</button>
        <button type="button" class="pure-button button-error delete-btn">Delete Post</button>
    </form>
</section>

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>
        {{> comments post.comments}}
    <div>
        <button type="submit" class="pure-button button-secondary">Add Comment</button>
    </div>
</form>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>