<article class="post">
      <div class="title">
        <a href="{{post.post_url}}" target="_blank">{{title}}</a>
        <span>({{format_url post_url}})</span>
      </div>
      <div class="meta">
        Submitted by - <u>{{user.username}}</u> on {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
      </div>
</article>